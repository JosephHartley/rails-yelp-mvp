<p style="color: green"><%= notice %></p>

<%= render @restaurant %>

<p><strong>Reviews</strong></p>
<ul class="list-group">
  <% @restaurant.reviews.each do |review| %>
    <li class="list-group-item"><%= review.content %></li>
  <% end %>
</ul>
<br>
<p><%= link_to "Add a new review", new_restaurant_review_path(@restaurant), class: "btn btn-primary" %></p>

<div>
  <%= link_to "Back to restaurants", restaurants_path, class: "btn btn-dark" %>

</div>
